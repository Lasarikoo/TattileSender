# Valores de ejemplo (NO usar en producción sin reemplazar).
APP_ENV=prod

DB_HOST=localhost
DB_PORT=5432
DB_NAME=tattile_sender
DB_USER=tattile_user
DB_PASSWORD=change_me

# Directorio seguro donde se almacenan certificados.
CERTS_DIR=/etc/tattile_sender/certs

# Directorio para almacenar imágenes ALPR decodificadas.
IMAGES_BASE_DIR=/data/images

# Puerto TCP de ingesta Tattile.
TRANSIT_PORT=33334

# Logging
LOG_LEVEL=INFO

# Ajustes del worker sender
SENDER_ENABLED=true
SENDER_POLL_INTERVAL_SECONDS=5
SENDER_MAX_BATCH_SIZE=50
SENDER_DEFAULT_RETRY_MAX=3
SENDER_DEFAULT_BACKOFF_MS=1000
SENDER_STUCK_TIMEOUT_SECONDS=300

# SOAP Mossos (placeholders)
MOSSOS_WSDL_URL=https://example.invalid/matricules.wsdl
MOSSOS_ENDPOINT_URL=https://example.invalid/matr-ws
MOSSOS_TIMEOUT=5.0
SOAP_DEBUG=0

# Notas:
# - Sustituye credenciales, rutas y endpoints por valores reales.
# - Mantén certificados fuera del repositorio y con permisos restringidos.
